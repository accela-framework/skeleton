#!/usr/bin/env php
<?php

namespace Accela;

if(php_sapi_name() !== "cli") exit;

if(file_exists(__DIR__ . "/../../env.php")){
  require_once __DIR__ . "/../../env.php";
}

require_once __DIR__ . "/../../vendor/autoload.php";

$accela = require_once __DIR__ . "/../init-accela.php";
$accela->staticSiteGenerator->output([
  "indexDir" => __DIR__ . "/../..",
  "outputDir" => "out",
  "includeFiles" => ["assets"]
]);
